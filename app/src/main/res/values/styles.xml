<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">#212121</item>
    </style>
    
    <style name="ActionIconStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:width">150dp</item>
        <item name="android:height">150dp</item>
    </style>

    <!-- Remove shadow from ActionBar https://stackoverflow.com/questions/12246388/remove-shadow-below-actionbar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">4dp</item>
        <item name="background">@color/colorBackground</item>
        <!--   <item name="android:homeAsUpIndicator">@drawable/baseline_arrow_back_white_48</item> -->
        <!-- <item name="height">100dp</item> -->

        <!-- Why does this work??? https://stackoverflow.com/questions/7655874/how-do-you-remove-the-title-text-from-the-android-actionbar/9936568-->
        <item name="displayOptions">showHome</item>

    </style>

</resources>