<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alchemistmoz.balochi">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Numbers Activity -->
        <activity
            android:name=".categories.numbers.NumbersActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.numbers.RepetitionActivity"
            android:parentActivityName=".categories.numbers.NumbersActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.numbers.MemoryActivity"
            android:parentActivityName=".categories.numbers.NumbersActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.numbers.AudioMatchActivity"
            android:parentActivityName=".categories.numbers.NumbersActivity"
            android:screenOrientation="sensorLandscape" />

        <!-- Colors Activity -->
        <activity
            android:name=".categories.colors.ColorsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.colors.RepetitionActivity"
            android:parentActivityName=".categories.colors.ColorsActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.colors.MemoryActivity"
            android:parentActivityName=".categories.colors.ColorsActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.colors.AudioMatchActivity"
            android:parentActivityName=".categories.colors.ColorsActivity"
            android:screenOrientation="sensorLandscape" />

        <!-- Family Activity -->
        <activity
            android:name=".categories.family.FamilyActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.family.RepetitionActivity"
            android:parentActivityName=".categories.family.FamilyActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.family.MemoryActivity"
            android:parentActivityName=".categories.family.FamilyActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.family.AudioMatchActivity"
            android:parentActivityName=".categories.family.FamilyActivity"
            android:screenOrientation="sensorLandscape" />

        <!-- FruitVeggies Activity -->
        <activity
            android:name=".categories.fruitveggies.FruitVeggiesActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.fruitveggies.RepetitionActivity"
            android:parentActivityName=".categories.fruitveggies.FruitVeggiesActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.fruitveggies.MemoryActivity"
            android:parentActivityName=".categories.fruitveggies.FruitVeggiesActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".categories.fruitveggies.AudioMatchActivity"
            android:parentActivityName=".categories.fruitveggies.FruitVeggiesActivity"
            android:screenOrientation="sensorLandscape" />

        <!-- Information Activity -->
        <activity
            android:name=".InfoActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="sensorLandscape" />
    </application>

</manifest>